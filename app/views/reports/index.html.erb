<h1 class="font-bold text-4xl">Informes</h1>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-6">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Título
                </th>
                <th scope="col" class="px-6 py-3">
                    Conteúdo
                </th>
                <th scope="col" class="px-6 py-3">
                    Processo
                </th>
                <th scope="col" class="px-6 py-3">
                    Autor
                </th>
                <th scope="col" class="px-6 py-3">
                    Criado em
                </th>
                <th scope="col" class="px-6 py-3">
                    Anexos
                </th>
              <% if current_user.role == 'developer' %>
                <th scope="col" class="px-6 py-3">
                    Cliente
                </th>
              <% end %>
                <th scope="col" class="px-6 py-3">
                    Ações
                </th>
            </tr>
        </thead>
        <tbody>
          <% @reports.each do |report| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <th scope="row" class="px-6 py-4 font-medium text-nowrap text-gray-900 whitespace-nowrap dark:text-white">
                  <%= report.title.truncate(60) %>
                </th>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= report.content.to_plain_text.truncate(60) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= report.lawsuit.alias %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= report.created_by.email %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= report.created_at.strftime('%d/%m/%Y - %H:%M:%S') %>
                </td>
                <td class="px-6 py-4">
                  <%= report.files.attached? ? "Sim" : "Não" %>
                </td>
              <% if current_user.role == 'developer' %>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= report.lawsuit.tenancy.name %>
                </td>
              <% end %>
                <td class="flex items-center px-6 py-4">
                  <%= link_to 'Edit', edit_report_path(report), class:"font-medium text-blue-600 dark:text-blue-500 hover:underline" %>
                  <%= button_to 'Remove', report_path(report), method: 'delete', class:"font-medium text-red-600 dark:text-red-500 hover:underline ms-3" %>
                </td>
            </tr>
          <% end %>
        </tbody>
    </table>
</div>
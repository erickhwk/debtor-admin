<div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-6">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Título
                </th>
                <th scope="col" class="px-6 py-3">
                    Processo
                </th>
                <th scope="col" class="px-6 py-3">
                    Criado em
                </th>
                <th scope="col" class="px-6 py-3">
                    Anexos
                </th>
              <% if current_user.role == 'developer' %>
                <th scope="col" class="px-6 py-3">
                    Cliente
                </th>
              <% end %>
            </tr>
        </thead>
        <tbody>
          <% @reports.each do |report| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <th scope="row" class="px-6 py-4 font-medium text-nowrap text-gray-900 whitespace-nowrap dark:text-white">
                  <%= report.title.truncate(60) %>
                </th>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= report.lawsuit.alias %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= report.created_at.strftime('%d/%m/%Y') %>
                </td>
                <td class="px-6 py-4">
                  <%= report.files.attached? ? "Sim" : "Não" %>
                </td>
              <% if current_user.role == 'developer' %>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= report.lawsuit.tenancy.name %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
    </table>
</div>
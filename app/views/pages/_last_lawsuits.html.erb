<div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-6">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Alias
                </th>
                <th scope="col" class="px-6 py-3">
                    Categoria
                </th>
                <th scope="col" class="px-6 py-3">
                    Criado em
                </th>
              <% if current_user.profile.role == 'developer' %>
                <th scope="col" class="px-6 py-3">
                    Cliente
                </th>
              <% end %>
            </tr>
        </thead>
        <tbody>
          <% @lawsuits.each do |lawsuit| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <th scope="row" class="px-6 py-4 whitespace-nowrap font-medium text-gray-900 dark:text-white">
                  <%= lawsuit.alias %>
                </th>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= lawsuit.category.humanize %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= lawsuit.created_at.strftime('%d/%m/%Y') %>
                </td>
              <% if current_user.profile.role == 'developer' %>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= lawsuit.tenancy.name %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
    </table>
</div>
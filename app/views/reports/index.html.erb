<h1 class="font-bold text-4xl">Informes</h1>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-6">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th scope="col" class="px-6 py-3">
                  Id
              </th>
              <th scope="col" class="px-6 py-3">
                  Título
              </th>
              <th scope="col" class="px-6 py-3">
                  Conteúdo
              </th>
              <th scope="col" class="px-6 py-3">
                  Processo
              </th>
              <th scope="col" class="px-6 py-3">
                  Autor
              </th>
              <th scope="col" class="px-6 py-3">
                  Criado em
              </th>
              <th scope="col" class="px-6 py-3">
                  Anexos
              </th>
              <% if current_user.profile.role == 'developer' %>
                <th scope="col" class="px-6 py-3">
                    Cliente
                </th>
              <% end %>
              <th scope="col" class="px-6 py-3">
                  Ações
              </th>
            </tr>
        </thead>
        <tbody>
          <% @reports.each do |report| %>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                <% if current_user.profile.role == 'developer' %>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%= report.id %>
                  </td>
                <% end %>
                <th scope="row" class="px-6 py-4 font-medium text-nowrap text-gray-900 whitespace-nowrap dark:text-white">
                  <%= report.title.truncate(60) %>
                </th>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= report.content.to_plain_text.truncate(60) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= report.lawsuit.alias %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= report.created_by.email %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= report.created_at.strftime('%d/%m/%Y - %H:%M:%S') %>
                </td>
                <td class="px-6 py-4">
                  <div class="flex gap-3">
                    <% if report.files.attached? %>
                      <% report.files.each_with_index do |file, index| %>
                        <%= link_to rails_blob_path(file, disposition: "attachment"), { class:"mt-2 rounded-l inline-block font-medium", "data-tooltip-target":"tooltip-default-#{index}", "data-tooltip-placement":"bottom" } do %>
                          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="m18.375 12.739-7.693 7.693a4.5 4.5 0 0 1-6.364-6.364l10.94-10.94A3 3 0 1 1 19.5 7.372L8.552 18.32m.009-.01-.01.01m5.699-9.941-7.81 7.81a1.5 1.5 0 0 0 2.112 2.13" />
                          </svg>

                        <% end %>
                        <div id="tooltip-default-<%= index %>" role="tooltip" class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 bg-gray-900 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700">
                          <%= file.filename %>
                          <div class="tooltip-arrow" data-popper-arrow></div>
                        </div>
                      <% end %>
                    </div>
                  <% else %> 
                    <span class="text-gray-400 whitespace-nowrap">Sem anexos</span>
                  <% end %>
                </td>
              <% if current_user.profile.role == 'developer' %>
                <td class="px-6 py-4 whitespace-nowrap">
                  <%= report.lawsuit.tenancy.name %>
                </td>
              <% end %>
                <td class="flex items-center px-6 py-4">
                  <%= link_to edit_report_path(report), class:"font-medium text-blue-600 dark:text-blue-500 hover:underline" do %>
                  <svg class="w-6 h-6 text-gray-700 dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M11.32 6.176H5c-1.105 0-2 .949-2 2.118v10.588C3 20.052 3.895 21 5 21h11c1.105 0 2-.948 2-2.118v-7.75l-3.914 4.144A2.46 2.46 0 0 1 12.81 16l-2.681.568c-1.75.37-3.292-1.263-2.942-3.115l.536-2.839c.097-.512.335-.983.684-1.352l2.914-3.086Z" clip-rule="evenodd"/>
                    <path fill-rule="evenodd" d="M19.846 4.318a2.148 2.148 0 0 0-.437-.692 2.014 2.014 0 0 0-.654-.463 1.92 1.92 0 0 0-1.544 0 2.014 2.014 0 0 0-.654.463l-.546.578 2.852 3.02.546-.579a2.14 2.14 0 0 0 .437-.692 2.244 2.244 0 0 0 0-1.635ZM17.45 8.721 14.597 5.7 9.82 10.76a.54.54 0 0 0-.137.27l-.536 2.84c-.07.37.239.696.588.622l2.682-.567a.492.492 0 0 0 .255-.145l4.778-5.06Z" clip-rule="evenodd"/>
                  </svg>
                  <% end %>
                  <%= button_to report_path(report), method: 'delete', class:"font-medium text-red-600 dark:text-red-500 hover:underline ms-3" do %>
                  <svg class="w-6 h-6 text-gray-700 dark:text-gray-200" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 24 24">
                    <path fill-rule="evenodd" d="M8.586 2.586A2 2 0 0 1 10 2h4a2 2 0 0 1 2 2v2h3a1 1 0 1 1 0 2v12a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V8a1 1 0 0 1 0-2h3V4a2 2 0 0 1 .586-1.414ZM10 6h4V4h-4v2Zm1 4a1 1 0 1 0-2 0v8a1 1 0 1 0 2 0v-8Zm4 0a1 1 0 1 0-2 0v8a1 1 0 1 0 2 0v-8Z" clip-rule="evenodd"/>
                  </svg>
                  <% end %>
                  <%= button_to remove_all_files_report_path(id: report.id), method: 'delete', class:"font-medium text-red-600 dark:text-red-500 hover:underline ms-3" do %>
                    <svg class="w-6 h-6 text-red-600 dark:text-red-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8v8a5 5 0 1 0 10 0V6.5a3.5 3.5 0 1 0-7 0V15a2 2 0 0 0 4 0V8"/>
                    </svg>
                  <% end %>
                </td>
            </tr>
          <% end %>
        </tbody>
    </table>
</div>